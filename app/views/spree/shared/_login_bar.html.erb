<% if spree_current_user %>
  <li>
    <%= link_to(spree.account_path) do %>
      <i class="fa fa-user-o fa-lg" aria-hidden="true"></i><span class="hidden-xs"><%= Spree.t(:my_account) %></span>
    <% end %>
  </li>
  <li>
    <%= link_to(spree.logout_path) do %>
      <i class="fa fa-sign-out fa-lg" aria-hidden="true"></i><span class="hidden-xs"><%= Spree.t(:logout) %></span>
    <% end %>
  </li>
<% else %>
  <li id="link-to-login">
    <%= link_to(spree.login_path) do %>
      <i class="fa fa-user-o fa-lg" aria-hidden="true"></i><span class="hidden-xs"><%= Spree.t(:login) %></span>
    <% end %>
  </li>
<% end %>
